<!-- item_product_page.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"


    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/checkedProduct0"
        >
        <ImageView
            android:id="@+id/checkedImageViewProduct0"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:background="@drawable/border"/>


        <TextView
            android:id="@+id/checkedTextViewProductName0"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="16sp"
            android:layout_marginTop="10sp"
            android:layout_toRightOf="@id/checkedImageViewProduct0"
            android:textStyle="bold"
            android:text="111111"/>

        <TextView
            android:id="@+id/checkedTextViewProductAddress0"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="16sp"
            android:layout_below="@id/checkedTextViewProductName0"
            android:layout_alignLeft="@id/checkedTextViewProductName0"
            android:text="222222"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/checkedProduct_checked0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round_button"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/delete" />
        <View
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="@color/grayI"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/checkedImageViewProduct0"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>
