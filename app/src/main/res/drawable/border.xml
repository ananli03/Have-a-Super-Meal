<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- 设置圆角半径 -->
            <solid android:color="@android:color/white" /> <!-- 背景颜色 -->
            <stroke
                android:width="2dp"
                android:color="@color/orangeI" /> <!-- 边框颜色 -->
        </shape>
    </item>
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" /> <!-- 设置圆角半径 -->
            <solid android:color="@android:color/transparent" /> <!-- 背景颜色透明 -->
        </shape>
    </item>
</layer-list>
