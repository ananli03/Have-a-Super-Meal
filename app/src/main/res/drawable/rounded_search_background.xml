<!-- res/drawable/rounded_search_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="24dp"/> <!-- 设置圆角半径 -->
    <solid android:color="#F6F6F6"/> <!-- 背景颜色 -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/> <!-- 内边距 -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD"/> <!-- 边框颜色和宽度 -->
</shape>
