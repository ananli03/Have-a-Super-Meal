<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" /> <!-- 背景色 -->
            <corners android:radius="6dp" /> <!-- 圆角 -->
        </shape>
    </item>
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 内部透明 -->
            <stroke android:width="2dp" android:color="@color/gray" /> <!-- 边框颜色 -->
            <corners android:radius="6dp" /> <!-- 圆角 -->
        </shape>
    </item>
</layer-list>
